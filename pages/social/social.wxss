/* pages/social/social.wxss */

.social-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  position: relative;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  background: white;
  padding: 10px 15px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 8px 12px;
  border-radius: 20px;
  font-size: 14px;
  color: #666;
  transition: all 0.3s;
}

.filter-item.active {
  background: linear-gradient(45deg, #6E0382, #9D4EDD);
  color: white;
}

/* 发布按钮 */
.publish-btn {
  position: fixed;
  right: 20px;
  bottom: 100px;
  width: 60px;
  height: 60px;
  background: linear-gradient(45deg, #6E0382, #9D4EDD);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  box-shadow: 0 4px 12px rgba(110, 3, 130, 0.3);
  z-index: 99;
  font-size: 12px;
}

/* 动态列表 */
.posts-container {
  padding: 10px 15px 120px;
  height: calc(100vh - 60px);
}

.post-item {
  background: white;
  border-radius: 12px;
  padding: 15px;
  margin-bottom: 15px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

/* 动态头部 */
.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: linear-gradient(45deg, #6E0382, #9D4EDD);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  margin-right: 10px;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 16px;
  font-weight: 500;
  color: #333;
}

.constitution {
  font-size: 12px;
  color: #6E0382;
  background: rgba(110, 3, 130, 0.1);
  padding: 2px 8px;
  border-radius: 10px;
  margin-top: 2px;
}

.post-time {
  font-size: 12px;
  color: #999;
}

/* 动态内容 */
.post-content {
  margin-bottom: 15px;
}

.content-text {
  font-size: 15px;
  line-height: 1.6;
  color: #333;
  display: block;
  margin-bottom: 10px;
}

/* 餐饮记录 */
.meal-record {
  background: #f8f9fa;
  border-radius: 8px;
  padding: 10px;
  margin: 10px 0;
  border-left: 3px solid #6E0382;
}

.meal-info {
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.meal-label {
  font-size: 13px;
  color: #6E0382;
  font-weight: 500;
}

.meal-text {
  font-size: 14px;
  color: #333;
}

.meal-emotion {
  font-size: 12px;
  color: #666;
}

/* 图片展示 */
.post-images {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin: 10px 0;
}

.post-image {
  width: calc(33.33% - 5px);
  height: 100px;
  border-radius: 8px;
}

/* 标签 */
.post-tags {
  margin: 10px 0;
}

.tag {
  display: inline-block;
  background: rgba(110, 3, 130, 0.1);
  color: #6E0382;
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 12px;
  margin-right: 8px;
}

/* 互动栏 */
.post-actions {
  display: flex;
  justify-content: space-around;
  padding-top: 15px;
  border-top: 1px solid #f0f0f0;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 5px;
  padding: 8px 15px;
  border-radius: 20px;
  transition: background-color 0.3s;
}

.action-item:active {
  background-color: #f0f0f0;
}

.action-icon {
  font-size: 16px;
}

.action-icon.liked {
  color: #ff4757;
}

.action-text {
  font-size: 13px;
  color: #666;
}

/* 加载状态 */
.loading-container,
.loading-more {
  text-align: center;
  padding: 30px 0;
  color: #999;
  font-size: 14px;
}

.empty-container {
  text-align: center;
  padding: 60px 20px;
}

.empty-icon {
  font-size: 48px;
  display: block;
  margin-bottom: 15px;
}

.empty-text {
  font-size: 16px;
  color: #666;
  display: block;
  margin-bottom: 8px;
}

.empty-desc {
  font-size: 14px;
  color: #999;
  display: block;
}

.no-more {
  text-align: center;
  padding: 20px 0;
  color: #999;
  font-size: 12px;
}

/* 分享弹窗 */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: white;
  border-radius: 20px 20px 0 0;
  max-height: 80vh;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 20px 10px;
  border-bottom: 1px solid #f0f0f0;
}

.modal-title {
  font-size: 18px;
  font-weight: 500;
  color: #333;
}

.modal-close {
  font-size: 24px;
  color: #999;
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 20px;
  max-height: 50vh;
  overflow-y: auto;
}

.share-input {
  width: 100%;
  min-height: 100px;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  padding: 15px;
  font-size: 15px;
  line-height: 1.5;
  background: #f8f9fa;
}

.image-section {
  margin-top: 20px;
}

.section-title {
  font-size: 14px;
  color: #666;
  margin-bottom: 10px;
  display: block;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.image-item {
  position: relative;
  width: 80px;
  height: 80px;
}

.share-image {
  width: 100%;
  height: 100%;
  border-radius: 8px;
}

.image-delete {
  position: absolute;
  top: -5px;
  right: -5px;
  width: 20px;
  height: 20px;
  background: #ff4757;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
}

.add-image {
  width: 80px;
  height: 80px;
  border: 2px dashed #ddd;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.add-icon {
  font-size: 24px;
  margin-bottom: 5px;
}

.add-text {
  font-size: 10px;
}

.modal-footer {
  display: flex;
  padding: 15px 20px;
  border-top: 1px solid #f0f0f0;
  gap: 15px;
}

.cancel-btn,
.publish-btn-modal {
  flex: 1;
  height: 44px;
  border-radius: 22px;
  border: none;
  font-size: 16px;
}

.cancel-btn {
  background: #f0f0f0;
  color: #666;
}

.publish-btn-modal {
  background: linear-gradient(45deg, #6E0382, #9D4EDD);
  color: white;
}
