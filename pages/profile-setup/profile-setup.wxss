/* pages/profile-setup/profile-setup.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 40rpx 30rpx 160rpx;
}

/* 进度指示器 */
.progress-container {
  margin-bottom: 60rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background-color: #e9ecef;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #6E0382 0%, #8E44AD 100%);
  transition: width 0.3s ease;
}

.progress-text {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}

/* 步骤容器 */
.step-container {
  margin-bottom: 40rpx;
}

.step-content {
  background-color: white;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  min-height: 400rpx;
}

.step-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.step-desc {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 表单组件 */
.form-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 88rpx;
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.input:focus {
  border-color: #6E0382;
  background-color: white;
}

.textarea {
  width: 100%;
  min-height: 120rpx;
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.textarea:focus {
  border-color: #6E0382;
  background-color: white;
}

/* 单选按钮组 */
.radio-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
}

.radio-item text {
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #333;
}

/* 滑块 */
.slider {
  margin: 20rpx 0;
}

.slider-desc {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 10rpx;
}

/* 时间选择器 */
.time-group {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
}

.time-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e9ecef;
}

.time-item:last-child {
  border-bottom: none;
}

.time-item text {
  font-size: 32rpx;
  color: #333;
}

.time-picker {
  padding: 10rpx 20rpx;
  background-color: white;
  border-radius: 8rpx;
  border: 2rpx solid #e9ecef;
  font-size: 32rpx;
  color: #6E0382;
}

/* 问题列表 */
.question-list {
  max-height: 800rpx;
  overflow-y: auto;
}

.question-item {
  margin-bottom: 50rpx;
  padding: 30rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
}

.question-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 30rpx;
  line-height: 1.6;
}

.option-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 16rpx 20rpx;
  background-color: white;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.2s ease;
}

.option-item:hover {
  border-color: #6E0382;
  background-color: #f8f4ff;
}

.option-text {
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #333;
  flex: 1;
}

/* 按钮组 */
.button-group {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 30rpx;
  background-color: white;
  border-top: 1rpx solid #e9ecef;
  gap: 20rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn-primary {
  background-color: #6E0382;
  color: white;
}

.btn-primary:hover {
  background-color: #5A0269;
}

.btn-secondary {
  background-color: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.btn-secondary:hover {
  background-color: #e9ecef;
}

/* 响应式适配 */
@media screen and (max-width: 750rpx) {
  .container {
    padding: 30rpx 20rpx 120rpx;
  }
  
  .step-content {
    padding: 30rpx;
  }
  
  .step-title {
    font-size: 40rpx;
  }
}

/* 响应式适配结束 */

/* 测试区域 */
.test-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 2rpx dashed #e9ecef;
}

.test-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #495057;
  margin-bottom: 20rpx;
}

.test-btn {
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 15rpx 40rpx;
  font-size: 26rpx;
  margin-bottom: 15rpx;
}

.test-btn:active {
  background-color: #0056b3;
}

.test-desc {
  display: block;
  font-size: 24rpx;
  color: #6c757d;
  line-height: 1.4;
}